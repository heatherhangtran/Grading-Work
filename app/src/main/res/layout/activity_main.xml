<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.randybiglow.weekendonehomework.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pass or Fail?"
        android:textSize="35dp"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        android:textStyle="bold"
        android:id="@+id/displayPF"/>

    <EditText
        android:layout_width="213dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:id="@+id/enterText"
        android:inputType="number"
        android:imeOptions="actionSearch"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Grade"
        android:layout_gravity="center"
        android:onClick="gradeButton"
        android:layout_marginTop="20dp"
        android:id="@+id/buttonOne"
        android:background="@drawable/custom_buttons"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pass or Fail?"
        android:layout_gravity="center"
        android:onClick="passOrFailButton"
        android:layout_marginTop="5dp"
        android:id="@+id/buttonTwo"
        android:background="@drawable/custom_buttons"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5 Times"
        android:layout_gravity="center"
        android:onClick="fiveTimesButton"
        android:layout_marginTop="5dp"
        android:id="@+id/buttonThree"
        android:background="@drawable/custom_buttons"/>

</LinearLayout>
